<link href="https://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.10.7/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.js"></script>


<%= nav_bar fixed: :top, responsive: true do %>
    <%= menu_group do %>
        <%= menu_item "Manage Reservations", '/admin/home' %>
        <%= menu_item "Manage Users/Admins" , "/users/" %>
        <%= menu_item "Manage Rooms", "/rooms/" %>
        <%= menu_item "Reserve for Member", "../admin/reserve_room_for_user" %>
    <% end %>

    <%= menu_group pull: :right do %>
        <%= menu_item "Edit Profile", "/profile/"+ current_user.id.to_s %>
        <%= menu_item "Log Out", "/logout" %>
    <% end %>

<% end %>
<br><br>
<strong><font color="red" size="4"><p id="notice"><%= notice %></p></font></strong>

<h2>Manage Rooms</h2><br>


<table class="table table-bordered table-striped displays" id="roomtable">
  <thead>
    <tr>
      <th>Building</th>
      <th>Number</th>
      <th>Size</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.building %></td>
        <td><%= room.number %></td>
        <td><%= room.size %></td>
        <td><%= link_to 'Show Details / History', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Delete', '/rooms/destroy/'+room.id.to_s %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>

<script>
  $(document).ready(function() {
    $('#roomtable').dataTable();
  });
</script>