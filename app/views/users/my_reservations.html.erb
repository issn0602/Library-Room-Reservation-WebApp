<link href="https://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.10.7/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.js"></script>


<%= nav_bar fixed: :top, brand: 'NCSU Libraries', responsive: true do %>
    <%= menu_group do %>
        <%= menu_item "Home", '/user/home' %>
        <%= menu_item "All Rooms", 'all_rooms'  %>
        <%= menu_item "Reserve a Room","search_room_form" %>
        <%= menu_item "My Reservations","my_reservations" %>
    <% end %>

    <%= menu_group pull: :right do %>
        <%= menu_item "Edit Profile", "/profile/"+ current_user.id.to_s %>
        <%= menu_item "Log Out", "/logout" %>
    <% end %>

<% end %>

<br><br>
<h2> Currernt Reservations </h2>

      <table class="table table-bordered table-striped" id="current">
        <thead>
        <tr>
          <th>Booking date</th>
          <th>Start time</th>
          <th>End time</th>
          <th>Room</th>
          <th>Release</th>
        </tr>
        </thead>

        <tbody>
        <% @currentReservations.each do |reservation| %>
            <tr>
              <td><%= reservation.booking_date %></td>
              <td><%= reservation.start_time %></td>
              <td><%= reservation.end_time %></td>
              <td><%= Room.find(reservation.room_id).number %></td>
              <td><%= link_to 'Release', '/reservation/release/'+reservation.id.to_s %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

<br><br>
<h2> Past Reservations</h2>

      <table class="table table-striped table-bordered" id="past">
        <thead>
        <tr>
          <th>Booking date</th>
          <th>Start time</th>
          <th>End time</th>
          <th>Room</th>
        </tr>
        </thead>

        <tbody>
        <% @pastReservations.each do |reservation| %>
            <tr>
              <td><%= reservation.booking_date %></td>
              <td><%= reservation.start_time %></td>
              <td><%= reservation.end_time %></td>
              <td><%= Room.find(reservation.room_id).number %></td>
            </tr>
        <% end %>
        </tbody>
      </table>





<script>
  $(document).ready(function() {
    $('#current').dataTable();
    $('#past').dataTable();
  });
</script>